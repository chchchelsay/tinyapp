<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!username){ %>
      <form method="POST" action="/login">
        <div class="form-group form-inline justify-content-start">
      <input type="text" placeholder="Username" name="username" required>
  <button type="submit">Submit</button>
      </form>
    <% } else if (username) { %>  
      Logged in as: <%= username %>
      <form align="right" name="form1" method="post" action="/logout">
        <label class="logoutLblPos">
        <input name="submit2" type="submit" id="submit2" value="Logout">
        </label>
      </form>
      <% } %>

  </nav>
</header>